    <div>
      <AuHeading @level="2" @skin="4">{{@bestuursfunctie.rol.label}}</AuHeading>
      <ul class="au-c-list-horizontal au-u-margin-top-small">
        <Leidinggevenden::ContactInfoContent
          @contactinfo={{@bestuursfunctie.contactinfo}}
        />
      </ul>
    </div>
