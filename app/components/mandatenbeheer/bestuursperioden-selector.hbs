<PowerSelect
  @renderInPlace={{true}}
  @selected={{this.selectedPeriod}}
  @options={{this.periodOptions}}
  class="is-optional"
  @onChange={{this.selectPeriod}}
  @searchEnabled={{false}}
  @noMatchesMessage="Geen bestuursperioden"
  as |period|
>
  {{#if this.periodOptions}}
    {{@prefix}}
    {{period.label}}
  {{else}}
    Geen bestuursperioden
  {{/if}}
</PowerSelect>