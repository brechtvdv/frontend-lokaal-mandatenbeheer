<PowerSelect
  @renderInPlace={{true}}
  @selected={{@selected}}
  @options={{@options}}
  class="is-optional"
  @onChange={{@onSelect}}
  @searchEnabled={{false}}
  @noMatchesMessage="Geen bestuursperioden"
  as |period|
>
  {{#if @options}}
    {{@prefix}}
    {{period.label}}
  {{else}}
    Geen bestuursperioden
  {{/if}}
</PowerSelect>