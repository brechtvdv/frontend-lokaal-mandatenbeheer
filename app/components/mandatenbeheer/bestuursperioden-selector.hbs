<PowerSelect
  @selected={{@selectedPeriod}}
  @options={{this.periodOptions}}
  class="is-optional"
  @onChange={{this.selectPeriod}}
  @searchEnabled={{false}}
  @noMatchesMessage="Geen bestuursperioden"
  as |period|
>
  {{#if this.periodOptions}}
    <Shared::Periode
      @start={{period.startDate}}
      @end={{period.endDate}}
    >Bestuursperiode</Shared::Periode>
  {{else}}
    Geen bestuursperioden
  {{/if}}
</PowerSelect>