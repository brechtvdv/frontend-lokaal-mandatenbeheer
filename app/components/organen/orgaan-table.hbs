<AuDataTable
  @content={{@content}}
  @noDataMessage="Geen bestuursorganen gevonden"
  @sort={{@sort}}
  as |t|
>
  <t.content as |c|>
    <c.header>
      <AuDataTableThSortable
        @field="naam"
        @currentSorting={{@sort}}
        @label="Bestuursorgaan"
      />
      <th>Type</th>
      <th>Aantal leden</th>
      <th>Einddatum</th>
      <th>Status orgaan</th>
    </c.header>

    <c.body as |row|>
      <td>
        <LinkTo @route={{@editRoute}} @model={{row.id}} class="au-c-link">
          {{row.naam}}
        </LinkTo>
      </td>
      <td>{{row.classificatie.label}}</td>
      <td>{{await row.nbMembers}}</td>
      <td>
        {{moment-format row.deactivatedAt "DD-MM-YYYY"}}</td>
      <td>
        {{#if row.isActive}}
          Actief
        {{else}}
          Inactief
        {{/if}}
      </td>
    </c.body>
  </t.content>
</AuDataTable>