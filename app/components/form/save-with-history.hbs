<AuButton
  {{on "click" this.openModal}}
  @disabled={{@disabled}}
>{{yield}}</AuButton>

<AuModal
  @id="form-history"
  @modalOpen={{this.isModalOpen}}
  @closeModal={{this.closeModal}}
  class="small"
  @title="Beschrijving doorgevoerde wijzigingen."
  as |Modal|
>
  <Modal.Body>
    <AuInput
      @id="history-message"
      @width="block"
      placeholder="Beschrijving wijzigingen"
      {{on "input" @updateValue}}
    />
  </Modal.Body>
  <Modal.Footer>
    <AuToolbar as |Group|>
      <Group>
        <AuButton {{on "click" this.confirm}}>
          Bevestig
        </AuButton>
      </Group>
    </AuToolbar>
  </Modal.Footer>
</AuModal>