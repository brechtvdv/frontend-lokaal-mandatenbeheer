<AuToolbar @size="large" as |Group|>
  <Group>
    <ul class="au-c-list-horizontal">
      <Leidinggevendenbeheer::ContactInfoItem
        @item={{@contactinfo.email}}
        @text="Geen mailadres"
      />
      <Leidinggevendenbeheer::ContactInfoItem
        @item={{@contactinfo.telefoon}}
        @text="geen telefoonnummer"
      />
      <Leidinggevendenbeheer::ContactInfoItem
        @item={{@contactinfo.adres.volledigAdres}}
        @text="geen adres"
      />
      <li class="au-c-list-horizontal__item">
        <LinkTo
          @route="leidinggevendenbeheer.bestuursfunctie.contact-info"
          @model={{@bestuursfunctieID}}
          class="au-c-link"
        >
          <AuIcon @icon="pencil" @alignment="left" />
          Bewerk
        </LinkTo>
      </li>
    </ul>
  </Group>
</AuToolbar>