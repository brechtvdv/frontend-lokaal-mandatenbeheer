<PowerSelect
  @selected={{this.ivService.currentStatus}}
  @options={{this.ivService.statusOptions}}
  class="is-optional"
  @onChange={{this.selectStatus}}
  @searchEnabled={{false}}
  @noMatchesMessage="Geen statussen"
  as |status|
>
  {{#if this.ivService.statusOptions}}
    {{status.label}}
  {{else}}
    Geen statussen
  {{/if}}
</PowerSelect>