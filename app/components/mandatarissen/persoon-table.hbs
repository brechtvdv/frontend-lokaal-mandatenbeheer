<AuDataTable
  @content={{@content}}
  @noDataMessage="Geen mandatarissen gevonden"
  @sort={{@sort}}
  @page={{@page}}
  @size={{@size}}
  as |t|
>
  <t.content as |c|>
    <c.header>
      <AuDataTableThSortable
        @field="is-bestuurlijke-alias-van.gebruikteVoornaam"
        @currentSorting={{@sort}}
        @label="Naam"
      />
      <AuDataTableThSortable
        @field="is-bestuurlijke-alias-van.achternaam"
        @currentSorting={{@sort}}
        @label="Familienaam"
      />
      <th>Fracties</th>
      <th>Mandaten</th>
    </c.header>

    <c.body as |persoon|>
      <Mandatarissen::PersoonTableRow
        @persoon={{persoon}}
        @bestuursperiode={{@bestuursperiode}}
      />
    </c.body>
  </t.content>
</AuDataTable>