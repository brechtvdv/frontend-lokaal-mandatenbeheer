<AuDataTable
  @content={{@content}}
  @noDataMessage="Geen mandatarissen gevonden"
  @sort={{@sort}}
  @page={{@page}}
  @size={{@size}}
  as |t|
>
  <t.content as |c|>
    <c.header>
      <AuDataTableThSortable
        @field="is-bestuurlijke-alias-van.gebruikteVoornaam"
        @currentSorting={{@sort}}
        @label="Naam"
      />
      <AuDataTableThSortable
        @field="is-bestuurlijke-alias-van.achternaam"
        @currentSorting={{@sort}}
        @label="Familienaam"
      />
      <th>Fractie</th>
      <th>Orgaan</th>
      <th>Mandaat</th>
      <th>Status</th>
    </c.header>

    <c.body as |persoonWithMandatarissen|>
      <Mandatarissen::PersoonTableRow
        @persoon={{persoonWithMandatarissen.persoon}}
        @mandatarissen={{persoonWithMandatarissen.mandatarissen}}
      />
    </c.body>
  </t.content>
</AuDataTable>