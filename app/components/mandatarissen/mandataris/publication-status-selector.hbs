<PowerSelect
  @selected={{this.publicationStatus}}
  @options={{this.publicationStatusOptions}}
  class="is-optional"
  @onChange={{this.onUpdatePublicationStatus}}
  @searchEnabled={{false}}
  @disabled={{this.disabled}}
  @noMatchesMessage="Geen statussen"
  @placeholder="Selecteer een status"
  as |status|
>
  {{#if status.label}}
    {{status.label}}
  {{else}}
    Geen statussen
  {{/if}}
</PowerSelect>