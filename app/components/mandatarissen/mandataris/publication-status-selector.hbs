<PowerSelect
  @selected={{@selectedStatus}}
  @options={{@options}}
  class="is-optional"
  @onChange={{@onSelect}}
  @searchEnabled={{false}}
  @disabled={{@disabled}}
  @noMatchesMessage="Geen statussen"
  @placeholder="Selecteer een status"
  as |status|
>
  {{#if status.label}}
    {{status.label}}
  {{else}}
    Geen statussen
  {{/if}}
</PowerSelect>