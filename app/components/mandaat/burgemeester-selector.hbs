<AuToolbar
  @size="large"
  @nowrap="true"
  class="au-u-padding-bottom-none au-u-margin-bottom-none"
  as |Group|
>
  <Group class="au-u-margin-bottom-none">
    <div class="au-o-flow">
      <AuHeading @skin="3">Ambt burgemeester</AuHeading>
    </div>
  </Group>
</AuToolbar>

<div class="au-o-box">
  {{#if this.errorMessage}}
    <AuAlert
      @title={{this.title}}
      @skin="error"
      @icon="alert-triangle"
      @closable={{false}}
    >
      <p>{{this.errorMessage}}</p>
    </AuAlert>
  {{/if}}
  <Person::Selector @person={{this.persoon}} @onUpdate={{this.onUpdate}} />
</div>