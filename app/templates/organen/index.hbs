{{page-title
  "Bestuursorganen"
  " "
  @model.bestuurseenheid.classificatie.label
  " "
  @model.bestuurseenheid.naam
}}

<AuToolbar @border="bottom" @size="large" as |Group|>
  <Group>
    <AuHeading @skin="2">Overzicht bestuursorganen</AuHeading>
  </Group>
  <Group>
    <AuLink @route="organen.fracties" @skin="button-secondary">Beheer fracties</AuLink>
    <AuLink @route="organen.beheer" @skin="button">Beheer bestuursorganen</AuLink>
  </Group>
</AuToolbar>

<div class="au-c-body-container au-c-body-container--scroll">
  <Organen::OrgaanCardList
    @organs={{@model.gemeenteBestuursorganen}}
    @title="Gemeente Bestuursorganen"
  />
  <Organen::OrgaanCardList
    @organs={{@model.decretaleBestuursorganen}}
    @title="Decretale Bestuursorganen"
  />
  <Organen::OrgaanCardList
    @organs={{@model.nietDecretaleBestuursorganen}}
    @title="Andere Bestuursorganen"
    @showType={{true}}
  />
</div>