{{page-title
  @model.bestuurseenheid.classificatie.label
  " "
  @model.bestuurseenheid.naam
  " "
  @model.bestuursfunctie.rol.label
}}

<AuToolbar @size="large" class="au-u-padding-bottom-none" as |Group|>
  <Group>
    <AuHeading @skin="2">Bekijk en bewerk aanstellingsperiode</AuHeading>
  </Group>
  <Group>
    <AuButton {{on "click" this.handleVoegNieuweAanstellingsperiodeClick}}>
      <AuIcon @icon="add" @alignment="left" />
      Voeg nieuwe aanstellingsperiode toe
    </AuButton>
  </Group>
</AuToolbar>

<AuToolbar @size="large" as |Group|>
  <Group>
    <ul class="au-c-list-horizontal">
      <li class="au-c-list-horizontal__item">
        {{#if @model.bestuursfunctie.contactinfo.email}}
          {{@model.bestuursfunctie.contactinfo.email}}
        {{else}}
          <span class="au-c-info-text">Geen mailadres</span>
        {{/if}}
      </li>
      <li class="au-c-list-horizontal__item">
        {{#if @model.bestuursfunctie.contactinfo.telefoon}}
          {{@model.bestuursfunctie.contactinfo.telefoon}}
        {{else}}
          <span class="au-c-info-text">geen telefoonnummer</span>
        {{/if}}
      </li>
      <li class="au-c-list-horizontal__item">
        {{#if @model.bestuursfunctie.contactinfo.adres.volledigAdres}}
          <span
          >{{@model.bestuursfunctie.contactinfo.adres.volledigAdres}}</span>
        {{else}}
          <span class="au-c-info-text">geen adres</span>
        {{/if}}
      </li>
      <li class="au-c-list-horizontal__item">
        <LinkTo
          @route="leidinggevendenbeheer.bestuursfunctie.contact-info"
          @model={{@model.bestuursfunctie.id}}
          class="au-c-link"
        >
          <AuIcon @icon="pencil" @alignment="left" />
          Bewerk
        </LinkTo>
      </li>
    </ul>
  </Group>
</AuToolbar>

<Legacy::Leidinggevendenbeheer::FunctionarisTable
  class="au-c-body-container"
  @content={{@model.functionarissen}}
  @sort={{this.sort}}
  @page={{this.page}}
  @size={{this.size}}
  @onClickNew={{this.handleVoegNieuweAanstellingsperiodeClick}}
  @onEdit="leidinggevendenbeheer.bestuursfunctie.functionarissen.edit"
/>

{{outlet}}