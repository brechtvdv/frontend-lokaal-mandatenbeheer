<AuMainContainer as |main|>
  <main.sidebar>
    <div class="au-c-sidebar">
      <div class="au-c-sidebar__header au-u-margin-top-small">
        <AuHeading @level="3" @skin="3">Filters</AuHeading>
      </div>
      <div class="au-c-sidebar__content au-o-box">
        <form class="au-o-grid au-o-grid--small">
          <div class="au-o-grid__item au-u-1-2 au-u-1-1@medium">
            <div class="au-c-label">Bestuursperiode</div>
            <Mandatenbeheer::BestuursperiodenSelector
              @options={{this.model.bestuursPeriods}}
              @selected={{this.model.selectedPeriod}}
              @onSelect={{this.selectPeriod}}
            />
          </div>
          <div class="au-o-grid__item au-u-1-2 au-u-1-1@medium">
            <div class="au-c-label">Naam</div>
            <AuInput
              value={{this.searchData}}
              @width="block"
              placeholder="Zoek mandataris"
              {{on "input" (perform this.search value="target.value")}}
            />
          </div>
          {{#if false}}
            <div class="au-o-grid__item au-u-1-2 au-u-1-1@medium">
              <div class="au-c-label">Mandaat</div>
              <Mandatenbeheer::BestuursorgaanMandaten
                @orderedMandaten={{this.model.orderedMandaten}}
                @availableBestuursfuncties={{this.model.availableBestuursfuncties}}
                @bestuursorgaanIT={{this.model.currentBestuursorgaan}}
              />
            </div>
          {{/if}}
          <div class="au-o-grid__item">
            <AuButton
              @skin="naked"
              @icon="x"
              @iconAlignment="left"
              {{on "click" this.clearFilters}}
            >
              Herstel alle filters
            </AuButton>
          </div>
        </form>
      </div>
    </div>
  </main.sidebar>
  <main.content>
    <AuBodyContainer id="content">
      <AuToolbar @size="large" @nowrap="true" as |Group|>
        <Group>
          <div class="au-o-flow">
            <AuHeading @skin="2">Mandatarissen</AuHeading>
          </div>
        </Group>
      </AuToolbar>
      <div class="au-c-body-container au-c-body-container--scroll">
        <Mandatarissen::PersoonTable
          @content={{@model.personen}}
          @sort={{this.sort}}
          @page={{this.page}}
          @size={{this.size}}
          @detailRoute="mandatarissen.persoon"
        />
      </div>
    </AuBodyContainer>
  </main.content>
</AuMainContainer>